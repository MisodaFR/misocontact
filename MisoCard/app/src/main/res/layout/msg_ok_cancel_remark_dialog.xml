<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_grey"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="Tieu de cua dialog"
        android:textAlignment="center"
        android:textColor="@color/blue_white"
        android:textSize="@dimen/text_size_23"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Noi dung 1"
        android:textColor="@color/black_white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:textColor="@color/black_white"
        android:textSize="16sp" />

    <!-- Utiliser ce tv plustard si besoin, il faut setVisiblity Ã  VISIBLE pour l'utiliser -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:textColor="@color/black_white"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">

        <include layout="@layout/zone_cancel_ok_btns" />
    </LinearLayout>

    <ScrollView
        style="@style/scrollbar_shape_style_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_remark_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:text="@string/chu_y"
                android:textColor="@color/black_white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_remark_content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Chu y 1"
                android:textColor="@color/black_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remark_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Chu y 1"
                android:textColor="@color/black_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remark_content_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Chu y 1"
                android:textColor="@color/black_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_remark_content_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Chu y 1"
                android:textColor="@color/black_white"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>